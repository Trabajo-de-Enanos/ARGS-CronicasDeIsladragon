<form autocomplete="off" spellcheck="off">
	<div class="args-dialogo">
		<h2>{{localize "ARGS.dialogos.lanzarconjuro"}} - {{ data.item.name }}</h2>
		<hr />
		<div class="form-group">
			<label>
				{{localize "ARGS.hechizos.conjmod"}}
			</label>
			<label>{{ data.bonifConjuracion }}</label>
		</div>
		<div class="form-group">
         <label>{{ localize "ARGS.modificadortemp" }}</label>
        <!--input type="text" name="bonus" value="" placeholder="{{ localize 'DND5E.RollExample' }}"/-->
         <input type="range" min="-5" max="+5" value="0" class="slider" id="modifsit">
         </div>
		<hr />

		<div class="form-group">
			<label>{{localize "SHADOWDARK.dialog.roll_mode_label"}}</label>
			<select name="rollMode">
				{{#select rollMode}}
					{{#each rollModes as |label mode|}}
						<option value="{{mode}}">{{localize label}}</option>
					{{/each}}
				{{/select}}
			</select>
		</div>
		<hr />
	</div>
</form>
