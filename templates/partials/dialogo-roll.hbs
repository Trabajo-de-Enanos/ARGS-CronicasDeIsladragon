<form>
    <div class="form-group">
        <label class="diag-fomulatit">{{ localize "ARGS.infotexto.formula" }}</label>
        <label class="diag-fomula" /> {{formula}}</label>
    </div>
    <div class="form-group">
      <label>
        {{localize "ARGS.infotexto.extrabonus"}}
      </label>
      <input type="text" name="extra-bonus" value="{{ data.extraBonus }}" placeholder="1d4 // 2 // -1">
    </div>
    <hr />
    <div class="form-group" style="height: 15px !important;">
        <label></label>
        <div style="display: flex;
                    justify-content: space-between;
                    padding-right: 5px;
                    padding-right: 5px;">
            <p>-5</p>
             <p id="rangeValue">0</p>
            <p>5</p>
        </div>            
    </div>
    <div class="form-group">
        <label>{{ localize "ARGS.infotexto.modificadortemp" }}</label>
        <!--input type="text" name="bonus" value="" placeholder="{{ localize 'DND5E.RollExample' }}"/-->
         <input type="range" min="-5" max="5" value="0" step="1" class="bono-situacional" name="bono-situacional" id="modifsit" oninput="rangeValue.innerText = this.value">
        
    </div>
    <hr />
   
     {{#if (or (eq data.item.type "armas")
              (eq data.rollType "ataquemonstruo")
              (eq data.rollType "ataquenpc"))}}
               <h4>{{localize "ARGS.infotexto.bonocorrersaltar"}}</h4>
    <div class="form-group" style="display: flex;
                    justify-content: space-around;
                    text-align: center;
                    padding-right: 5px;
                    padding-right: 5px;
                    margin: 0px;">
       
            <p style="margin:0px;">{{localize "ARGS.pericias.movimiento.correr"}}</p>
            <p style="margin:0px;">{{localize "ARGS.pericias.movimiento.saltar"}}</p>            
    </div>    
   
    <div class="form-group" style="display: flex;
                    justify-content: space-around;
                    padding-right: 5px;
                    padding-right: 5px;
                    margin: 0px">
       
            <input class="bonocorrer" type="checkbox"  name="bono-correr" data-dtype="Boolean" {{checked data.bonoCorrer}} >
            <input class="bonosaltar" type="checkbox"  name="bono-saltar" data-dtype="Boolean" {{checked data.bonoSaltar}} >
    </div>
    {{/if}}

    
    <hr />
		<div class="form-group">
			<label>{{localize "ARGS.infotexto.tipotirada"}}</label>
			<select name="rollMode">
				{{#select rollMode}}
					{{#each rollModes as |label mode|}}
						<option value="{{mode}}">{{localize label}}</option>
					{{/each}}
				{{/select}}
			</select>
		</div>
    <hr />
    
</form>
