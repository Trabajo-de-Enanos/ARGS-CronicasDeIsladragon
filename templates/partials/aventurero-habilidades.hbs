 <section class="center-pane flexcol">
     <section>
         {{> systems/ARGS/templates/partials/aventurero-lenguajes.hbs}}

  
      </section>
    <section class="clase-banner">
        <h3>{{localize "ARGS.infotexto.claselabel"}}</h3>
        
        {{#each items as |item iid|}}                              
                {{#if (eq item.type "clases")}}   
                
            <div class="item clase" data-item-id="{{item._id}}">
            <div class="clase-info grid-3col" >
            <div class="item-name">
                <div class="item-image">
                <img src="{{item.img}}" title="{{item.name}}" width="70" height="70"/>
                </div>
                <div class="nombreitem" >{{item.name}}</div>
            </div>                   
            <div class="item-stats-titulo">
                <h3>{{localize "ARGS.clases.caracppales"}}:</h3>
                <div class="item-stats">
                <span>    {{localize (concat "ARGS.caracteristicas." item.system.stats.primaria)}}</span>
                <span>    {{localize (concat "ARGS.caracteristicas." item.system.stats.secundaria)}}</span>
                <span>    {{localize (concat "ARGS.caracteristicas." item.system.stats.terciaria)}}</span>         
                </div>
            </div>                                        
            <div class="item-controls">                        
                 <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                 <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>   
             </div>      
             </div>           
                {{/if}}
       {{/each}}
      

    </section>
 
       
   <section class="habilidad-banner">        
        <h3>{{localize "ARGS.infotexto.habilidades"}}: {{localize "ARGS.habilidades.Combate"}}</h3>
                    
        
        {{#each items as |item iid|}}                  
             {{#if (and (eq item.type "habilidades") (eq item.system.tipo "ARGS.habilidades.Combate") )}}     
        <div class="item combate" data-item-id="{{item._id}}">
        <div class="habilidad-info grid-3col" >  
        <div class="combate grid-3col" >
            <div class="item-name">
                <div class="item-image">
                <img src="{{item.img}}" title="{{item.name}}" width="70" height="70"/>
                </div>
                <div class="nombreitem">{{item.name}}</div>
            </div>                   
          <div class="item-description">
               {{editor
                    itemsHTML
                    target="item.system.description.value"
                    button=true
                    editable=editable
                    engine="prosemirror"
                    collaborate=false
                }}
            
            </div>                                      
            <div class="item-controls">                        
                 <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                 <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
       
        </div>                    
        </div>
        </div>
                {{/if}}
       {{/each}}
       
       

       <h3>{{localize "ARGS.infotexto.habilidades"}}: {{localize "ARGS.habilidades.Campamento"}}</h3>
           
        
        {{#each items as |item iid|}}                  
             {{#if (and (eq item.type "habilidades") (eq item.system.tipo "ARGS.habilidades.Campamento") )}}    
        <div class="item camp" data-item-id="{{item._id}}">             
         <div class="habilidad-info grid-3col" >                       
            <div class="campamento grid-3col" >
            <div class="item-name">
                <div class="item-image">
                <img src="{{item.img}}" title="{{item.name}}" width="70" height="70"/>
                </div>
                <div class="nombreitem">{{item.name}}</div>
            </div>                   
          <div class="item-description">
              
             	{{editor
                    itemsHTML
                    target="item.system.description.value"
                    button=true
                    editable=editable
                    engine="prosemirror"
                    collaborate=false
                }}
            </div>                                      
            <div class="item-controls">                        
                 <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                 <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
           
        </div>     
            </div>     
        </div>          
                {{/if}}
       {{/each}}
      
   
        <h3>{{localize "ARGS.infotexto.habilidades"}}: {{localize "ARGS.habilidades.Otros"}}</h3>
       
        {{#each items as |item iid|}}                  
             {{#if (and (eq item.type "habilidades") (or (eq item.system.tipo "ARGS.habilidades.Otros") (eq item.system.tipo "ARGS.habilidades.Pasiva")) )}}    
        <div class="item otros" data-item-id="{{item._id}}">
        <div class="habilidad-info grid-3col" >                  
        <div class="otros grid-3col" data-item-id="{{item._id}}">
            <div class="item-name">
                <div class="item-image">
                <img src="{{item.img}}" title="{{item.name}}" width="70" height="70"/>
                </div>
                <div class="nombreitem">{{item.name}}</div>
            </div>                   
          <div class="item-description">
              
            {{editor
                    itemsHTML
                    target="item.system.description.value"
                    button=true
                    editable=editable
                    engine="prosemirror"
                    collaborate=false
                }}
            </div>                                      
            <div class="item-controls">                        
                 <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                 <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
           
        </div>   
         </div>       
        </div>          
                {{/if}}
       {{/each}}
       
      
    </section>

