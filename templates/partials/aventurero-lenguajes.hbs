<section class="lenguajes">
  
    <div class="tabla-idiomas grid-2col">
       {{#each items as |item iid|}}                              
                {{#if (eq item.type "especie") }}
      <div class="item especie" data-item-id="{{item._id}}">
      <div class="especie-info" >
        <h3>{{localize "ARGS.especies.origen"}}</h3>
          <div class="item-name " >
            <div class="item-image">
            <img src="{{item.img}}" title="{{item.name}}" width="70" height="70"/>
            </div>
            <div class="nombreitem">{{item.name}}</div>
               <div class="item-controls" >                        
                 <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                 <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
        </div> 
         <div class="descripcion-especie">         
              
         </div>               
      </div>
      </div>
        {{/if}}
       {{/each}}
      <div>
          <h3 style="margin-bottom: 0px;">{{localize "ARGS.lenguajes.infoleng"}}</h3>
    <div class="puntosleng grid grid-2col" style="margin-bottom: 0px;">
      <h4 style="margin-bottom: 0px;">{{localize "ARGS.lenguajes.ptsidioma"}} {{system.ptosidioma}} - {{localize "ARGS.lenguajes.gastados"}} {{system.calculados.totalCostoLeng}} </h4> 
      
    </div>
      <table>
          <tr>            
            <td>{{localize "ARGS.lenguajes.leng"}}"</td>
            <td>{{localize "ARGS.lenguajes.costotb"}}</td>
            <td>{{localize "ARGS.lenguajes.nivel"}}</td>            
            <td>{{localize "ARGS.lenguajes.costofinal"}}</td>
            <td>{{localize "ARGS.lenguajes.natal"}}</td>
            <td>Ctrl</td>
         
         </tr>
      
      {{#each lenguajes as |lenguaje id|}}      
        <tr class="item leng" data-item-id="{{lenguaje._id}}">
         <td><label >{{lenguaje.name}}</label></td>  
         <td><span>{{lenguaje.system.costo}}</span></td>   
         <td>                          
          <select name="system.lenguajes.{{id}}.nivel">               
              {{#selectValue @root.system.lenguajes id}}
              {{#each @root.config.lengnivel as |nivel valor|}}           
              <option value="{{valor}}"> {{localize nivel}}</option>
              {{/each}}	
              {{/selectValue}} 
          </select>        
         </td>         
         <td>{{lenguaje.system.costoFinal}}</td>
        <td>{{lenguaje.system.natal}}</td>
        <td class="controles">
           <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
          </td>
         
        </tr>  
      {{/each}}  
      </table>
     </div>
          
  </div>
</section>