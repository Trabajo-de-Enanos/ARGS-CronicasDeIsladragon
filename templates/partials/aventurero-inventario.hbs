                        <h4 class="attribute-name box-title">
                            <input name="system.resources.secundario.label" type="text" value="{{system.resources.secundario.label}}"
                                   placeholder="{{localize "ARGS.RecursoSecundario"}}" />
                        </h4>
                        <div class="attribute-value">
                            <input type="text" name="system.recursos.secundario.value" value="{{system.recursos.secundario.value}}" placeholder="0" data-dtype="Number" style="border-bottom: 1px solid purple;">
                            <span class="sep"> / </span>
                            <input type="text" name="system.recursos.secundario.max" value="{{system.recursos.secundario.max}}" placeholder="0" data-dtype="Number"style="border-bottom: 1px solid purple;">                            
                        </div>
