                </ul>
</section>
<section class="central">
    <section class="izquierda">
        <h3>{{localize "ARGS.infotexto.invcuerpo"}}</h3>
        <ol class="items-list">
                <li class="item flexrow items-header">
                    <div class="item-name">{{localize "ARGS.items.nombre"}}</div>
                    <div class="item-peso"> {{localize "ARGS.items.peso"}}</div>
                    <div class="item-defensa"> DEF</div>
                    <div class="item-controls"> Ctrl </div>
                </li>
                {{#each items as |item iid|}}
                               
                {{#if (and (eq system.equipado true)  (eq system.enmontura false))}}
                    <li class="item flexrow" data-item-id="{{item._id}}">
                    <div class="item-name">
                        {{#if (and (eq item.name "Antorcha") (gt item.system.usos.value 0))}}
                          <div class="item-image" style="background-image: url('icons/sundries/lights/torch-brown-lit.webp')"
									      data-item-id="{{item._id}}">
                                           <i class="fas fa-comment fa-lg"></i>
                        </div>                         
                         {{else}}
                         <div class="item-image" style="background-image: url({{item.img}})"
									      data-item-id="{{item._id}}">
                                           <i class="fas fa-comment fa-lg"></i>
                        </div>
                         {{/if}}
                       
                        <div class="nombreitem">{{item.name}}</div>
                    </div>
                    <div class="item-peso ">{{item.slotsUsed}}</div>                    
                    <div class="item-defensa ">{{item.system.defensa}}</div>
                    <div class="item-controls" style="font-size: 12px;">
                        <a class="item-control item-toggle" data-action="itemToggle" title="{{localize "ARGS.items.desequipar"}}">
                        <i class="fas fa-shield-alt"></i></a>
                        <a class="item-control item-mounttoggle" data-action="itemMount"  title="{{localize "ARGS.items.cargarmont"}}">
                        <i class="fas fa-horse-head"></i></a>
                        <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                    </div>
                    </li>
                    {{/if}}
                
                    
                {{/each}}
        </ol>
    </section>
    <section class="medio">
        <section class="invgratis">
            <h3>INV: {{system.calculados.cargaalmacenaje.value}} / {{system.calculados.cargaalmacenaje.max}}
                {{#if (gt system.calculados.cargaalmacenaje.value system.calculados.cargaalmacenaje.max)}}
                    <DIV style="color: rgb(165, 4, 4);"> 
                        {{localize "ARGS.infotexto.excesoinv"}}</DIV>                                       
                {{/if}}                
            </h3>
        </section>
 
        {{#each config.tiposInvCentro as |name typeInv|}}
         <ol class="items-list">
                 <li class="item flexrow items-header">
                    <div class="item-namecenter">{{localize (concat "ARGS.inventarioCentro." typeInv)}}</div>                    
                    <div class="item-peso"> {{localize "ARGS.items.peso"}}</div>
                    <div class="item-cant">{{localize "ARGS.items.cantres"}}</div>
                    <div class="item-usos" >{{localize "ARGS.items.usos"}}</div>
                    <div class="item-defensa"> DEF</div>
                    <div class="item-controls"> Ctrl </div>
                </li>
               
                
                {{#each @root.items as |item iid|}}   
                {{#if (eq item.type typeInv ) }}               
                {{!--#each gear as |item id|--}}
              
                {{#if (and (eq system.equipado false)  (eq system.enmontura false))}}
                    <li class="item flexrow" data-item-id="{{item._id}}">
                    <div class="item-namecenter">
                         <div class="item-image" style="background-image: url({{item.img}})"
									      data-item-id="{{item._id}}">
                                           <i class="fas fa-comment fa-lg"></i>                        
                        <!--a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a-->
                         
                        </div>
                       <div class="nombreitem">{{item.name}}</div>
                    </div>
                    <div class="item-peso ">{{item.slotsUsed}}</div>
                    <div class="item-cant">{{item.system.cantidad}}</div>

                    <div class="item-usos">
                        {{#if item.system.usos}}
                        <input class="item-usos inline-edit" type="text" data-field="system.usos.value" value="{{item.system.usos.value}}" placeholder="0" data-dtype="Number" >
                        <span class="sep"> / </span>
                        <div class="item-usomax">{{#if item.system.usos.max}}   {{item.system.usos.max}} {{else}}{{item.system.usos.por}}{{/if}}</div>
                        {{/if}}
                    </div>    
                    <div class="item-defensa ">{{item.system.defensa}}</div>
                    {{#if items.totalWeight}}
                        <div class="item-detail">
                            {{ items.totalWeight }} PESADO
                        </div>
                    {{/if}}
                    <div class="item-controls">
                        <a class="item-control item-toggle" data-action="itemToggle"  title="{{localize "ARGS.items.equipar"}}">
                        <i class="fas fa-shield-alt"></i></a>
                        <a class="item-control item-mounttoggle" data-action="itemMount"  title="{{localize "ARGS.items.cargarmont"}}">
                        <i class="fas fa-horse-head"></i></a>
                        <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                    </div>
                    </li>
                {{/if}}
                {{/if}}
                {{!--/each--}}
                 
                {{/each}}
                
               
                
        </ol>
         {{/each}} 
    </section>
        
    <section class="derecha">
        <section class="monturas">
            <h3>{{localize "ARGS.infotexto.monturascomp"}}</h3>
        </section>
        <div>
            {{> "systems/ARGS/templates/partials/montura-inv.hbs" }}
        </div>
        <h3>{{localize "ARGS.infotexto.invmonturas"}} {{system.calculados.cargaalmacenajeMt.value}} / {{system.calculados.cargaalmacenajeMt.max}}</h3>
             {{#if (gt system.calculados.cargaalmacenajeMt.value system.calculados.cargaalmacenajeMt.max)}}
                    <DIV style="color: rgb(165, 4, 4);"> 
                        {{localize "ARGS.infotexto.excesoinv"}}</DIV>                                       
                {{/if}}       
        <ol class="items-list">
                <li class="item flexrow items-header">
                    <div class="item-name">{{localize "ARGS.items.nombre"}}</div>
                    <div class="item-peso"> {{localize "ARGS.items.peso"}}</div>
                    <div class="item-cant">{{localize "ARGS.items.cantres"}}</div>
                    <div class="item-controls"> Ctrl </div>
                </li>

                {{#each items as |item iid|}}                              
                {{#if (eq system.enmontura true)}}
                    <li class="item flexrow" data-item-id="{{item._id}}">
                    <div class="item-name">
                         <div class="item-image" style="background-image: url({{item.img}})"
									      data-item-id="{{item._id}}">
                                           <i class="fas fa-comment fa-lg"></i>
                        <!--a class="rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a-->
                        </div>
                        <div class="nombreitem">{{item.name}}</div>
                    </div>                   
                    <div class="item-peso ">{{item.slotsUsedMt}}</div>                    
                    <div class="item-cant">{{item.system.cantidad}}</div>
                    <div class="item-controls">                        
                        <a class="item-control item-mounttoggle" data-action="itemMount"  title="{{localize "ARGS.items.descargarmont"}}">
                        <i class="fas fa-horse-head"></i></a>
                        <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
                    </div>
                    </li>
                    {{/if}}
                
                    
                {{/each}}
        </ol>
    </section>
</section>
