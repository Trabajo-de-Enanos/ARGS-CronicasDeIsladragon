  <section class="center-pane flexcol">
    {{!-- Body Attributes --}}
         {{#if (gt system.calculados.cargainventario.value system.calculados.cargainventario.max)}} 
                    <DIV class="exceso" style="color: rgb(165, 4, 4); text-align:center;"> 
                        {{localize "ARGS.infotexto.excesocarga"}}</DIV> 
                {{/if}}

                <ul class="attributes flexrow">
                    <li class="attribute resource">
                        <h4 class="attribute-name box-title">
                            {{localize "ARGS.atributos.capacidadcarga"}}
                            
